<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="edu.umbc.dmutlu1.caesarcipher.AboutActivity"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar2"
            android:elevation="4dp"
            app:title="@string/about"
            app:navigationIcon="@mipmap/ic_launcher"
            app:titleTextColor="@android:color/white"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <TextView
                android:text="@string/team_caesar_salad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTeamName"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
                android:text="@string/_2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textYear"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textTeamName"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <ImageView
                android:layout_width="221dp"
                android:layout_height="210dp"
                app:srcCompat="@drawable/UMBCretrievers"
                android:id="@+id/imageUMBC"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textYear"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                android:contentDescription="@string/desc_umbc_logo"/>

        <TextView
                android:text="@string/team_members"
                android:layout_width="333dp"
                android:layout_height="80dp"
                android:id="@+id/textCredits"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageUMBC"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintVertical_bias="0.133"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="14dp"
                app:layout_constraintHorizontal_bias="0.375"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>