<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:tag="cipher card container">

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:id="@+id/cipher_card"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:cardCornerRadius="5dp"
            card_view:layout_constraintVertical_bias="0.0"
            card_view:layout_constraintHorizontal_bias="0.0"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="6dp">

            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cipherSpinner"
                    card_view:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" android:layout_marginLeft="8dp"
                    card_view:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
                    card_view:layout_constraintRight_toRightOf="parent" android:backgroundTint="@color/colorPrimary"
                    android:entries="@array/ciphers" card_view:layout_constraintHorizontal_bias="0.496"/>

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#b6b6b6"
                    tools:layout_editor_absoluteX="0dp"
                    android:id="@+id/view" android:layout_marginTop="8dp"
                    card_view:layout_constraintTop_toBottomOf="@+id/cipherSpinner"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/input_hint"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="8dp"
                    card_view:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
                    card_view:layout_constraintRight_toRightOf="parent" android:inputType="textCapSentences"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="8dp" card_view:layout_constraintTop_toBottomOf="@+id/view"
                    card_view:layout_constraintVertical_bias="0.0"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>